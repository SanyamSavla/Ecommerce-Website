<div class="hero-wrap hero-bread" style="background-image: url(/images/bg_1.jpg);">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span> <span>Products</span>
                </p>
                <h1 class="mb-0 bread">Available Tables</h1>
            </div>
        </div>
    </div>
</div>



<section class="ftco-section">
    <div class="container">


        {{# each products}}

            <div class="row">
                {{# each this}}

                    <div class="col-md-6 col-lg-3 ftco-animate">

                        <div class="product">

                            <a href="#" class="img-prod"><img class="img-fluid" src="{{this.imagePath}}" alt="Colorlib Template">
                            </a>
                            <div class="text py-3 pb-4 px-3 text-center">
                                <h3><a href="#">{{this.name}} </a></h3>
                                <div class="d-flex">
                                    <div class="pricing">
                                        <p class="price"><span>{{this.location}}</span></p>
                                    </div>
                                </div>
                                <div class="bottom-area  ">
                                    <div class=" m-auto ">

                                        <a href="/book/{{this.name}}" class="">
                                            <span>Book</span>
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                {{/each}}

            </div>
        {{/each}}





    </div>

</section>
